@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@using RJ35.Models
@using RJ35.Models.AuthViewModels
@using RJ35.Data.Identity
@using Microsoft.AspNetCore.Identity
@model RegisterViewModel
@inject SignInManager<RJ35WebUser> SignInManager

@{
    ViewData["Title"] = "Register";
}

<div class="position-relative" style="height: calc(100vh - 117px - 1rem);">
    <div class="position-absolute top-50 start-50 translate-middle rounded-5 bg-dark-subtle p-4 w-50">
        <form asp-controller="Authentication" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
            <h4>Register a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" id="Email" placeholder="name@example.com">
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" id="Password" placeholder="**">
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" id="Password" placeholder="**">
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="my-3">
                <button type="submit" class="btn btn-primary" data-mdb-ripple-init>Register</button>
            </div>
            <p>
                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">Already have an Account?</a>
            </p>
        </form>
    </div>
</div>