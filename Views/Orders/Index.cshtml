@model IEnumerable<RJ35.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="pt-3">
    <h2 class="">Orders</h2>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Order Date</th>
                        <th>Customer Name</th>
                        <th>Order Total</th>
                        <th>Order Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderID</td>
                            <td>@order.OrderDate</td>
                            <td>@order.UserId</td>
                            <td>@order.OrderTotal</td>
                            <td>@order.OrderStatus</td>
                            <td>
                                <a asp-controller="Orders" asp-route-id="@order.OrderID">Details</a> |
                                <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order.OrderID">Edit</a> |
                                <a asp-controller="Orders" asp-action="Delete" asp-route-id="@order.OrderID">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



